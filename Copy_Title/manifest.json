{
    "name": "Copy Title & URL",
    "version": "1.0",
    "manifest_version": 2,
    "description": "ページのタイトルとURLをコピーする",
    "icons":{
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts":[
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icons/icon48.png",
        "default_title": "Copy Title & URL"
    },
    "permissions": [
        "tabs",
        "clipboardWrite",
        "background"
    ]
}